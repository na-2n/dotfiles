; vim:ft=dosini

[module/blank]
type = internal/xwindow
label = " "

[module/workspaces]
type = internal/bspwm

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

pin-workspaces = true

ws-icon-0 = discord;d
ws-icon-1 = terminal;t
ws-icon-2 = firefox;f
ws-icon-3 = code;c
ws-icon-4 = music;m
ws-icon-default = w

format = <label-state>

label-empty = %icon%
label-empty-padding = 1

label-dimmed = %icon%
label-dimmed-padding = 1

label-occupied = %icon%
label-occupied-underline = #a6ffffff
label-occupied-padding = 1

label-urgent = %icon%
label-urgent-padding = 1
label-urgent-background = #995641

label-focused = %icon%
label-focused-overline = #30313a
label-focused-background = #30313a
label-focused-underline = #fff
label-focused-padding = 1


[module/window]
type = internal/xwindow

format = <label>

label = %title%
label-maxlen = 50
label-underline = #fff
label-margin-left = 1


[module/mpd]
type = internal/mpd

label-song = NP: %artist% - %title%
label-song-maxlen = 100
label-song-margin = 1
label-song-underline = #fff


[module/weather]
type = custom/script

exec = ~/.config/polybar/weather.sh

interval = 600

label-font = 5
label-underline = #fff
label-margin = 1


[module/openvpn]
type = custom/script

exec = ~/.config/polybar/openvpn.sh

interval = 100

label-underline = #fff
label-margin = 1


[module/wifi]
type = internal/network

interface = wlp2s0

interval = 3.0

format-connected = <label-connected>
format-disconnected = <label-disconnected>
format-packetloss = <label-packetloss>

label-connected = WIFI: %essid%
label-connected-underline = #fff
label-connected-margin = 1

label-disconnected = WIFI: * disconnected
label-disconnected-underline = #fff
label-disconnected-margin = 1

label-packetloss = WIFI: ? %essid%
label-packetloss-underline = #fff
label-packetloss-margin = 1


[module/volume]
type = internal/volume

master-soundcard = default
speaker-soundcard = default
headphone-soundcard = default

master-mixer = Master
speaker-mixer = Speaker
headphone-mixer = Headphone

headphone-id = 19

mapped = true

format-volume = VOL: <ramp-volume> <label-volume>
format-volume-underline = #fff
format-volume-margin = 1

format-muted = VOL: <label-muted>
format-muted-underline = #fff
format-muted-margin = 1

label-muted = muted

ramp-volume-0 = ">  "
ramp-volume-1 = ">> "
ramp-volume-2 = ">>>"


[module/backlight]
type = internal/xbacklight

enable-scroll = true

format = <label>
format-underline = #fff
format-margin = 1

label = BL: %percentage%%


[module/battery]
type = internal/battery

full-at = 98

battery = BAT0
adapter = ADP0

poll-interval = 5

time-format = %H:%M

format-charging = <label-charging>
format-charging-underline = #fff
format-charging-margin = 1

format-discharging = <label-discharging>
format-discharging-underline = #fff
format-discharging-margin = 1

format-full = <label-full>
format-full-underline = #fff
format-full-margin = 1

label-charging = BAT: + %percentage%%

label-discharging = BAT: - %percentage%%

label-full = BAT: * %percentage%%

bar-capacity-width = 4


[module/time]
type = internal/date

interval = 1.0

time = %H:%M
time-alt = %H:%M:%S

label = %time%
label-underline = #fff
label-margin = 1


[module/date]
type = internal/date

interval = 1.0

date = %d-%m-%Y%
date-alt = %A, %d %B %Y

label = %date%
label-underline = #fff
label-margin = 1

[bar/shadow]
height = 30
width = 1500

offset-y = 32
offset-x = 57

backgroud = #000000

modules-center = blank


[bar/nyan]
bottom = false
height = 30
width = 1500

offset-y = 25
offset-x = 50

fixed-center = true

line-size = 2

background = #212121
; #0c1118

