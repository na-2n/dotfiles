; vim:ft=dosini

[vars]
media-player = spotify


[colors]
background = #EEEEEE
foreground = #424242
; Blue 300
accent = #64B5F6
; Red 300
error = #E57373
; Amber 300
warning = #FFD54F


[fonts]
font-0 = M+ 1p Medium:pixelsize=10;3
font-1 = FontAwesome 5 Free Solid:pixelsize=10;3
font-2 = FontAwesome 5 Brands:pixelsize=10;3
font-3 = M+ 1p Regular:pixelsize=10;3
font-4 = Meslo LG M:pixelsize=10;3


[workspace-icons]
ws-icon-0 = code;
ws-icon-1 = terminal;
ws-icon-2 = game;
ws-icon-3 = paint;
ws-icon-4 = steam;

ws-icon-5 = firefox;
ws-icon-6 = discord;
ws-icon-7 = music;
ws-icon-8 = logs;

ws-icon-default = 


[bar/base]
inherit = fonts

monitor = ${env:MONITOR:}

; 100%:-60
width = 100%:-40
height = 50
; 30
offset-x = 20
;30
offset-y = 20

fixed-center = true

padding = 5
module-margin = 2.5

line-size = 4

background = ${colors.background}
foreground = ${colors.foreground}


[bar/top]
inherit = bar/base

modules-left = workspaces nowplaying
modules-center = window
modules-right = volume time date


[bar/laptop]
inherit = bar/base

modules-left = workspaces
modules-center = window
modules-right = wifi brightness battery volume-small time date


[bar/primary]
inherit = bar/base

modules-left = workspaces nowplaying
modules-center = window
modules-right = volume time date


[bar/secondary]
inherit = bar/base

modules-left = workspaces
modules-center = window
modules-right = volume time date


[module/workspaces]
type = internal/bspwm

inherit = workspace-icons

label-focused = %icon%
label-focused-padding = 2
label-focused-underline = ${colors.accent}

label-occupied = %icon%
label-occupied-padding = 2

label-urgent = %icon%
label-urgent-padding = 2
label-urgent-underline = ${colors.warning}

label-empty = %icon%
label-empty-padding = 2
label-empty-foreground = #55


[module/window]
type = internal/xwindow

label = %title%
label-maxlen = 30


[module/nowplaying]
type = custom/script

interval = 0.15

exec = ~/.config/polybar/nowplaying.py spotify 30 %counter%
exec-if = pgrep -x spotify

format-prefix = "   "

label-font = 5
label-maxlen = 30


[module/volume-small]
type = internal/pulseaudio

use-ui-max = false

format-volume = "  <label-volume>"
format-volume-padding = 2
format-volume-underline = ${colors.accent}

format-muted = "  <label-muted>"
format-muted-padding = 2
format-muted-underline = ${colors.error}

label-muted = Muted


[module/volume]
type = internal/pulseaudio

use-ui-max = false

format-volume = "<label-volume>    <bar-volume>"
format-volume-padding = 2

format-muted = "<label-muted>    <bar-volume>"
format-muted-padding = 2

label-volume-font = 4

label-muted-font = 4
label-muted = Muted

bar-volume-width = 8

bar-volume-empty = ─
bar-volume-empty-foreground = #55

bar-volume-fill  = ─

bar-volume-indicator = 
bar-volume-indicator-foreground = ${colors.accent}


[module/time]
type = internal/date

time = %I:%M %p
time-alt = %H:%M:%S

label = %time%
label-padding = 2
label-underline = ${colors.accent}


[module/date]
type = internal/date

date = %a, %b %d

label = %date%
label-padding = 2
label-underline = ${colors.accent}


[module/wifi]
type = internal/network

interface = wlp3s0

format-connected =   <label-connected>
format-connected-padding = 2
format-connected-underline = ${colors.accent}

format-packetloss = "    <label-packetloss>  "
format-packetloss-padding = 2
format-packetloss-underline = ${colors.warning}

format-disconnected = "    <label-disconnected>  "
format-disconnected-padding = 2
format-disconnected-underline = ${colors.error}

label-connected = %essid%

label-packetloss = %essid%
label-disconnected = Disconnected


[module/battery]
type = internal/battery

battery = BAT0
adapter = AC

format-charging = <animation-charging>  <label-charging>
format-charging-padding = 2
format-charging-underline = ${colors.warning}

format-discharging = <ramp-capacity>  <label-discharging>
format-discharging-padding = 2
format-discharging-underline = ${colors.accent}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 


[module/brightness]
