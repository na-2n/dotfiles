; vim:ft=dosini

[vars]
media-player = spotify


[colors]
background = #EEEEEE
foreground = #424242
; Blue 300
accent = #64B5F6
;#00B0FF
;#29B6F6
; #40C4FF


[fonts]
font-0 = M+ 1p Medium:pixelsize=10;3
font-1 = FontAwesome 5 Free Solid:pixelsize=10;3
font-2 = FontAwesome 5 Brands:pixelsize=10;3
font-3 = M+ 1p Regular:pixelsize=8;3
font-4 = Meslo LG M:pixelsize=10;3


[workspace-icons]
ws-icon-0 = code;
ws-icon-1 = terminal;
ws-icon-2 = game;
ws-icon-3 = paint;
ws-icon-4 = steam;

ws-icon-5 = firefox;
ws-icon-6 = discord;
ws-icon-7 = music;
ws-icon-8 = logs;

ws-icon-default = 


[bar/base]
inherit = fonts

monitor = ${env:MONITOR:}

; -24 ; -40 ; -60
width = 100%:-12
; 50
height = 40
; 12 ; 20 ; 30
offset-x = 6
; 12 ; 20 ; 30
offset-y = 6

fixed-center = true

; 5
padding = 6
; 2.5
module-margin = 3

line-size = 4
line-color = ${colors.accent}

background = ${colors.background}
foreground = ${colors.foreground}


[bar/top]
inherit = bar/base

modules-left = workspaces nowplaying
modules-center = window
modules-right = volume time date


[bar/primary]
inherit = bar/base

modules-left = workspaces nowplaying
modules-center = window
modules-right = volume time date


[bar/secondary]
inherit = bar/base

modules-left = workspaces
modules-center = window
modules-right = volume time date


[module/workspaces]
type = internal/bspwm

inherit = workspace-icons

label-focused =  "  %icon%  "
label-occupied = "  %icon%  "
label-urgent =   "  %icon%  "
label-empty =    "  %icon%  "

label-focused-underline = #FF

label-empty-foreground = #55


[module/window]
type = internal/xwindow

label = "  %title%  "
;label-underline = #FF
label-maxlen = 30


[module/nowplaying]
type = custom/script

interval = 0.15

exec = ~/.config/polybar/nowplaying.py spotify 30 %counter%
exec-if = pgrep -x spotify

format-prefix = "   "

label-font = 5
label-maxlen = 30


[module/volume]
type = internal/pulseaudio

use-ui-max = false

format-volume-padding = 2
format-muted-padding = 2

format-volume = "<label-volume>    <bar-volume>"
format-muted  = "<label-muted>    <bar-volume>"

label-volume-font = 4

label-muted-font = 4
label-muted = Muted

bar-volume-width = 8

bar-volume-empty = ─
bar-volume-empty-foreground = #55

bar-volume-fill  = ─

bar-volume-indicator = 
bar-volume-indicator-foreground = ${colors.accent}


[module/time]
type = internal/date

time = %I:%M %p
time-alt = %H:%M:%S

label = "  %time%  "
label-underline = #FF


[module/date]
type = internal/date

date = %a, %b %d

label = "  %date%  "
label-underline = #FF

