#! /bin/sh

sxhkd &

bspc monitor -d discord terminal firefox code music VI VII VIII IX X

bspc config border_width        2
bspc config window_gap          50
bspc config focused_border_color \#A0A21
bspc config normal_border_color \#232428

bspc config split_ratio          0.52
bspc config borderless_monocle   true
bspc config gapless_monocle      true

bspc rule -a KShare state=floating
bspc rule -a Gimp desktop='^8' state=floating follow=on
#bspc rule -a DiscordCanary desktop='^1' && discord &
#bspc rule -a st-256color desktop='^2' && st &
#bspc rule -a Firefox desktop='^3' && firefox &
bspc rule -a mplayer2 state=floating
bspc rule -a Kupfer.py focus=on
bspc rule -a Screenkey manage=off
bspc rula -a net-ftb-main-Main state=floating
