#!/bin/sh

export _JAVA_AWT_WM_NONREPARENTING=1
export KRITA_NO_STYLE_OVERRIDE=1

sxhkd &
fcitx &
MONITOR="LVDS1" polybar -r laptop &
MONITOR="VGA1" polybar -r laptop &

xsetroot -solid \#FEFEFE
xsetroot -cursor_name left_ptr

bspc monitor LVDS1 -d discord  terminal code    firefox music VI VII VIII IX X
bspc monitor VGA1  -d terminal code     firefox IV      V     VI VII VIII IX X

bspc config border_width          5 # 10
bspc config window_gap            20 # 30
bspc config normal_border_color   \#EEEEEE
bspc config active_border_color   \#EEEEEE
bspc config focused_border_color  \#64B5F6

bspc config split_ratio           0.50
bspc config borderless_monocle    true
bspc config gapless_monocle       true
bspc config external_rules_command "./external_rules"

bspc rule -a net-ftb-main-Main state=floating

